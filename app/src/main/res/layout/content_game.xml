<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="5dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.damian.blakjack.GameActivity"
    tools:showIn="@layout/activity_game">
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/dealer"
    android:text="DEALER"
    android:textSize="25sp"
    android:gravity="center"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dealer"
        android:id="@+id/explain"
        android:layout_centerHorizontal="true"
        android:text="Dealer must draw on 16 and MUST Stand on 17"/>

    <ImageView
        android:layout_width="48dp"
        android:layout_height="68dp"
        android:paddingTop="10dp"
        android:id="@+id/dealerHiddenCard"
        android:src="@drawable/back"
        android:layout_below="@+id/explain"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <ImageView
        android:layout_width="48dp"
        android:layout_height="68dp"
        android:paddingTop="10dp"
        android:id="@+id/dealerCard1"
        android:layout_below="@+id/explain"
        android:layout_toRightOf="@+id/dealerHiddenCard"/>

    <ImageView
        android:layout_width="48dp"
        android:layout_height="68dp"
        android:paddingTop="10dp"
        android:id="@+id/dealerCard2"
        android:layout_below="@+id/explain"
        android:layout_toRightOf="@+id/dealerCard1"/>

    <ImageView
        android:layout_width="48dp"
        android:layout_height="68dp"
        android:paddingTop="10dp"
        android:id="@+id/dealerCard3"
        android:layout_below="@+id/explain"
        android:layout_toRightOf="@+id/dealerCard2"/>

    <ImageView
        android:layout_width="48dp"
        android:layout_height="68dp"
        android:paddingTop="10dp"
        android:id="@+id/dealerCard4"
        android:layout_below="@+id/explain"
        android:layout_toRightOf="@+id/dealerCard3"/>

    <ImageView
        android:layout_width="48dp"
        android:layout_height="68dp"
        android:paddingTop="10dp"
        android:id="@+id/dealerCard5"
        android:layout_below="@+id/explain"
        android:layout_toRightOf="@+id/dealerCard4"/>

    <ImageView
        android:layout_width="48dp"
        android:layout_height="68dp"
        android:paddingTop="10dp"
        android:id="@+id/dealerCard6"
        android:layout_below="@+id/dealerHiddenCard"
        />

    <ImageView
        android:layout_width="48dp"
        android:layout_height="68dp"
        android:paddingTop="10dp"
        android:id="@+id/dealerCard7"
        android:layout_below="@+id/dealerHiddenCard"
        android:layout_toRightOf="@+id/dealerCard6"/>

    <ImageView
        android:layout_width="48dp"
        android:layout_height="68dp"
        android:paddingTop="10dp"
        android:id="@+id/dealerCard8"
        android:layout_below="@+id/dealerHiddenCard"
        android:layout_toRightOf="@+id/dealerCard7"/>

    <ImageView
        android:layout_width="48dp"
        android:layout_height="68dp"
        android:paddingTop="10dp"
        android:id="@+id/dealerCard9"
        android:layout_below="@+id/dealerHiddenCard"
        android:layout_toRightOf="@+id/dealerCard8"/>

    <ImageView
        android:layout_width="48dp"
        android:layout_height="68dp"
        android:paddingTop="10dp"
        android:id="@+id/dealerCard10"
        android:layout_below="@+id/dealerHiddenCard"
        android:layout_toRightOf="@+id/dealerCard9"/>

    <ImageView
        android:layout_width="48dp"
        android:layout_height="68dp"
        android:paddingTop="10dp"
        android:id="@+id/dealerCard11"
        android:layout_below="@+id/dealerHiddenCard"
        android:layout_toRightOf="@+id/dealerCard10"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dealerScore"
        android:text="dealer's value: "
        android:layout_below="@+id/dealerCard6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user"
        android:text="YOU"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/dealerScore"
        />

    <ImageView
        android:layout_width="48dp"
        android:layout_height="68dp"
        android:paddingTop="10dp"
        android:id="@+id/userCard1"
        android:layout_below="@+id/user" />
    <ImageView
        android:layout_width="48dp"
        android:layout_height="68dp"
        android:paddingTop="10dp"
        android:id="@+id/userCard2"
        android:layout_below="@+id/user"
        android:layout_toRightOf="@+id/userCard1"/>
    <ImageView
        android:layout_width="48dp"
        android:layout_height="68dp"
        android:paddingTop="10dp"
        android:id="@+id/userCard3"
        android:layout_below="@+id/user"
        android:layout_toRightOf="@+id/userCard2"/>
    <ImageView
        android:layout_width="48dp"
        android:layout_height="68dp"
        android:paddingTop="10dp"
        android:id="@+id/userCard4"
        android:layout_below="@+id/user"
        android:layout_toRightOf="@+id/userCard3"/>
    <ImageView
        android:layout_width="48dp"
        android:layout_height="68dp"
        android:paddingTop="10dp"
        android:id="@+id/userCard5"
        android:layout_below="@+id/user"
        android:layout_toRightOf="@+id/userCard4"/>
    <ImageView
        android:layout_width="48dp"
        android:layout_height="68dp"
        android:paddingTop="10dp"
        android:id="@+id/userCard6"
        android:layout_below="@+id/user"
        android:layout_toRightOf="@+id/userCard5"/>
    <ImageView
        android:layout_width="48dp"
        android:layout_height="68dp"
        android:paddingTop="10dp"
        android:id="@+id/userCard7"
        android:layout_below="@+id/userCard6"/>

    <ImageView
        android:layout_width="48dp"
        android:layout_height="68dp"
        android:paddingTop="10dp"
        android:id="@+id/userCard8"
        android:layout_below="@+id/userCard6"
        android:layout_toRightOf="@+id/userCard7"/>

    <ImageView
        android:layout_width="48dp"
        android:layout_height="68dp"
        android:paddingTop="10dp"
        android:id="@+id/userCard9"
        android:layout_below="@+id/userCard6"
        android:layout_toRightOf="@+id/userCard8"/>

    <ImageView
        android:layout_width="48dp"
        android:layout_height="68dp"
        android:paddingTop="10dp"
        android:id="@+id/userCard10"
        android:layout_below="@+id/userCard6"
        android:layout_toRightOf="@+id/userCard9"/>

    <ImageView
        android:layout_width="48dp"
        android:layout_height="68dp"
        android:paddingTop="10dp"
        android:id="@+id/userCard11"
        android:layout_below="@+id/userCard6"
        android:layout_toRightOf="@+id/userCard10"/>

    <ImageView
        android:layout_width="48dp"
        android:layout_height="68dp"
        android:paddingTop="10dp"
        android:id="@+id/userCard12"
        android:layout_below="@+id/userCard6"
        android:layout_toRightOf="@+id/userCard11"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userScore"
        android:text="'s value: "
        android:layout_below="@+id/userCard8"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gameStatus"
        android:text="Your turn"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_below="@+id/userScore"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deal"
        android:text="DEAL"
        android:onClick="deal"
        android:layout_marginTop="3dp"

        android:layout_below="@+id/gameStatus"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hit"
        android:text="hit"
        android:onClick="hit"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/gameStatus"
        android:layout_toRightOf="@+id/deal"
        android:layout_toEndOf="@+id/deal" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stay"
        android:text="STAY"
        android:onClick="stay"
        android:layout_below="@+id/gameStatus"
        android:layout_toRightOf="@+id/hit"
        android:layout_toEndOf="@+id/hit"
        android:layout_marginTop="3dp" />

</RelativeLayout>
